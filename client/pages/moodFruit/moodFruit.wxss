}
.click_num{
  position: absolute;
  top: 1050rpx;
  left: 65rpx;
  color: rgb(255, 255, 255);
  background-color:black;
  opacity: 0.6;
}
 .btn{
  position: absolute;
  top: 1050rpx;
  right: 65rpx;
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
  margin: 0;
  padding: 0;
  vertical-align: middle;
  line-height: 60rpx;
  text-align: center;
  background-color:black;
  opacity: 0.6;
  color: rgb(255, 255, 255);
  font-size: 55rpx;
} 
.joke,.reward,.remind{
  
  background-color: white;
  width: 600rpx;
  height: 550rpx;
  position: absolute;
  top: 320rpx; 
  margin: 0 30rpx; 
  border-radius: 50rpx;
}
.remind{
  z-index: 2;
  color:rgb(225, 225, 225);
}
.ts{
  margin: auto 20rpx;
  font-size: 50rpx;
  display: block;
  text-align: center;
  line-height: 140rpx;
  height: 140rpx;
  color: black;
  border-bottom: 1rpx solid rgb(210, 210, 210);
}
.info{
  display: block;
  margin: auto 20rpx;  
  text-indent: 2rem;
  line-height: 1.5rem;
  color: #a5a5a5;
}
.remind button{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50rpx;
  margin-top: 20rpx;
  color: white;
  background-color: rgb(244, 186, 81);
}
.reward{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-content: center;
  align-items: center;
}
.zhong{
  font-size: 55rpx;
  font-weight: 600;
  color: #383838
}
