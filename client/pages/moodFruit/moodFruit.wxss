
.mood_tree{
  margin: auto 40rpx 40rpx;
}
.tip{
  font-size: 30rpx;
  line-height: 65rpx;
  text-align: center;
  border: 1rpx solid;
  border-radius: 50rpx ;
  border-color: rgb(210, 210, 210);
  color: rgb(144, 144, 144);
  width: 285rpx;
  height: 65rpx;
}
.leaves_num{
  margin: 15rpx 0rpx 22rpx auto;
  border-color: rgb(210, 210, 210);
  color: rgb(144, 144, 144);
}
.tree{
  height: 1038rpx;
  width: 100%;
  border-radius: 50rpx;
  position: relative;
}
.apple{
